  "compilerOptions": {
    "target": "es2015",
    "module": "commonjs",
    "lib": ["dom", "esnext"],
    "declaration": true,
    "outDir": "dist",
    "strict": true,
    "moduleResolution": "node",
    "esModuleInterop": true,
    "sourceMap": true,
    "jsx": "react"
